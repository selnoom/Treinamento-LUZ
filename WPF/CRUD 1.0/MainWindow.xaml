<Window x:Class="CRUD_1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD_1._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Command="{Binding comando}" Content="Button" HorizontalAlignment="Left" Margin="224,0,0,0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding nome}" HorizontalAlignment="Left" Margin="184,106,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <ListView   ItemsSource="{Binding lista}" Margin="526,89,58,128">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="{Binding nome}" HorizontalAlignment="Left" Margin="349,39,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
