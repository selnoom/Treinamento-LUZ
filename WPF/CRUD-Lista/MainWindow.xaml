<Window x:Class="CRUD_Lista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD_Lista"
        mc:Ignorable="d"
        Title="Crud" Height="400" Width="600">
    <Grid Margin="10">

        <TextBox Text="{Binding nome}" HorizontalAlignment="Left" Margin="57,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" Height="24"/>
        <Button Command="{Binding adicionar}" Content="Adicionar" Margin="57,139,394,182"/>
        <Button Command="{Binding apagar}" Content="Apagar" Name="b2" Margin="57,187,394,136"/>
        <Button Command="{Binding editar}" Content="Editar" HorizontalAlignment="Left" Margin="57,233,0,0" VerticalAlignment="Top" Height="28" Width="120"/>
        <ListView ItemsSource="{Binding lista}" SelectedItem="{Binding value}" Name="ListView1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="198,80,198,118">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Digitar Nome:" HorizontalAlignment="Left" Margin="57,80,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.528,0.565" Width="114" Height="30"/>
    </Grid>

</Window>
